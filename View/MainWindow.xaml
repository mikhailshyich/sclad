<Window x:Class="Sclad.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sclad"
        mc:Ignorable="d"
        Title="Справочник товары" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="1">
            <TabItem Name="Goods">
                <TabItem.Header>
                    <TextBlock Text="Товары"/>
                </TabItem.Header>
                <ListView ItemsSource="{Binding AllGoods}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Наименование"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>
        <StackPanel Grid.Row="0" Orientation="Horizontal"
                    HorizontalAlignment="Left">
            <Button Content="Добавить товар" Command="{Binding OpenAddNewGoodsWnd}"/>
        </StackPanel>
    </Grid>
</Window>
